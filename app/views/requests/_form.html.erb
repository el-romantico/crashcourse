<%= form_for @request, :html => {:role => 'form', :class => 'form-horizontal col-sm-6 col-sm-offset-3'} do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tags %><br>
    <%= f.text_field :tags, :value => @request.tags.map(&:label).join, :class => 'form-control' %>
