<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @course.date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @course.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>
    <% if @course.approved? %>
      Approved
    <% else %>
      Waiting for approval
    <% end %>
  </strong>
</p>

<p>
  Enrolled
  <ul>
    <% @course.users.each do |user| %>
      <li><%=  link_to user.email, user %></li>
    <% end %>
  </ul>
</p>

<% unless @course.enrolled? current_user %>
  <%= button_to "Enroll", action: 'enroll' %>
<% end %>
<% if current_user %>
  <% if current_user.admin? && !@course.approved? %>
    | <%= link_to 'Review', edit_course_path(@course) %>
  <% else %>
    | <%= link_to 'Edit', edit_course_path(@course) %>
  <% end %>
  <% if @course.lecturer == current_user || current_user.admin? %>
    | <%= link_to 'Delete', course_path(@course), method: :delete,  data: { confirm: 'Are you certain you want to delete this?' } %>
  <% end %>
<% end %>
| <%= link_to 'Back', courses_path %>
