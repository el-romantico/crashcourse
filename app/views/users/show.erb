
<div class="panel-heading">
  <h3>
    <% if @user.admin? %>
      <small><span class="glyphicon glyphicon-ok-sign" title="Verified" id="verified" style="color: #428bca;"></span></small>
    <% end %>
    <% if @user.name %>
      <%= @user.name %>
    <% end %>
    <small><%= @user.email %></small>
  </h3>
</div>
<hr />
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag(@user.picture.url(:thumb)) %>
    </div>
  </div>

  <div class="row">
      <div class="col-md-4">
        <h3>Teaching</h3>
        <% @courses_as_teacher.each do |course| %>
          <div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title"><%= link_to course.name, course %></h3>
              </div>
              <div class="panel-body">
                <p><%= truncate course.description, length: 500 %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-4">
        <h3>Enrolled in</h3>
        <% @user.courses.each do |course| %>
          <div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title"><%= link_to course.name, course %></h3>
              </div>
              <div class="panel-body">
                <p><%= truncate course.description, length: 500 %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-4">
        <h3>Requests</h3>
        <% @requests.each do |request| %>
          <h4><%= request.tags.map(&:label).join(', ') %> in <%= request.location_city %></h4>
        <% end %>
      </div>
  </div>
</div>
